{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "root": true,
  "extends": "standard",
  "plugins": [
    "html"
  ],
  "rules": {
    "arrow-parens": 0,
    "space-before-function-paren": 0,
    "no-new": 0,
    "generator-star-spacing": 0,
    "no-mixed-spaces-and-tabs": [0],
    "indent": [2,4]
  }
}
